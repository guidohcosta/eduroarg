<div id="challenges">
  <h1><%= @challenge.url %></h1>
  <% @challenge.description.split("\n").each do |paragraph| %>
    <p><%= paragraph %></p>
  <% end %>

  <% if @challenge.url == 'TRANSFORMAR' %>
    <div id="imagem-dica">
      <img src="<%= image_path('dica-final.png') %>" alt="dica para resolver o mistÃ©rio" />
    </div>
  <% end %>

  <div class="formulario-missao">
    <%= form_for challenges_path, method: :patch do |form| %>
      <%= form.text_field :resposta, name: :resposta %>
    <% end %>
  </div>

  <div class="icons">
    <button class="map-icon">
      <img src="<%= image_path('icone-mapa.png') %>" />
    </button>
    <button class="hint-icon">
      <img src="<%= image_path('interroga-icone.png') %>" />
    </button>
  </div>

  <div class="player-counter">
    <h2><%= @challenge.count %></h2>
    <span class="player-counter-text">intrusos</span>
  </div>
</div>
